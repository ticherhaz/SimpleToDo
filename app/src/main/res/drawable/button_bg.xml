<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <gradient android:angle="-90" android:endColor="@color/color_primary_2" android:startColor="@color/color_primary" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <solid android:color="@color/color_disable" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <gradient android:angle="-90" android:endColor="@color/color_primary_dark_2" android:startColor="@color/color_primary_dark" />
        </shape>
    </item>
</selector>